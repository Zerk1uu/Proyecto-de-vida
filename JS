var pe= document.getElementsByTagName('p');
   var texto=pe[16].textContent;   /// esto que es?? por que 16 tiene que ser el tercer parrafo       es que yo interpret√© que era el tercer parrafo de abajo
   var vocales='aeiouAEIOU';
   var contvoc=0;
   for (let i = 0; i < texto.length; i++) {
       for (let j = 0; j < vocales.length; j++) {
           if (texto[i]==vocales[j]) {
               contvoc++;
           }
           
       }
   }
   alert(contvoc+' vocales');
//EJERCICIO 1
function verocultar() {
    if (document.getElementById("ver").textContent.includes("Mostrar")) {
        document.getElementById("ver").textContent="Ocultar texto"
        document.getElementById("p1").style.display="block"
    }else{
        document.getElementById("p1").style.display="none"
        document.getElementById("ver").textContent="Mostrar texto"
    } 
}
//EJERCICIO 5
function fondobeige(input) {
    input.style.background="beige"
}
function fondoblanco(input) {
    input.style.background="white"
}
function fondoazul(input) {
    input.style.background="lightblue"
}

