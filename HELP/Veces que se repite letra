<body>Escribe una frase :
    <input type="text" id="frase" name="frase">
    <button onclick="press(frase)">ver</button>
    <p id="repes">Repeticiones</p>


    
    <script>
    function press(texto) {
    var mensaje = document.getElementById("frase").value;
    var cadena = mensaje.split('');
    var contador = {};
    cadena.forEach(function(valor) 
    {
        if (contador[valor] === undefined) 
        {
            contador[valor] = 1
        } 
        else 
        {
            contador[valor] += 1
        }
    });

    document.getElementById("repes").innerHTML = '<ul>';
    for (var clave in contador) 
    {
        document.getElementById("repes").innerHTML += '<li>' + clave + ':' + contador[clave] + '</li>';
    }
    document.getElementById("repes").innerHTML += '<ul>';
    }
        
    
    </script>

</body>
