<body>
  <div id="gato" style="left: 486px; top: 109px;">
      <img src="Instagram.jpg">
  </div>
        
      <script type="text/javascript">
     
     
 var gato = document.getElementById("gato");
 var moverse = false;
  gato.addEventListener("mousedown", clickar, false);

  function mover(e){
  var Y = e.clientY ;
  var X = e.clientX ;
  
  image.style.left = X ;
  image.style.top = Y ;
}

function clickar(e) {
  if(moverse){
    document.removeEventListener("mousemove", mover);
   moverse = !moverse;
    return;
  }
    moverse = !moverse;
  image = this;
  document.addEventListener("mousemove", mover, false);

}
    </script>

</body>
