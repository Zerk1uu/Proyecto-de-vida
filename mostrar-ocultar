<script>

    function muestraOculta(id) {
        var parrafos = document.getElementById('contenidos_' + id);
        var enlaces = document.getElementById('enlace_' + id);

        if (parrafos.style.display == "" || parrafos.style.display == "block") {
            parrafos.style.display = "none";
            enlaces.innerHTML = 'Mostrar contenidos';
        }
        else {
            parrafos.style.display = "block";
            enlaces.innerHTML = 'Ocultar contenidos';
        }

    }

</script>

<body>
